{
  "version": "1.0.0-beta8",
  "authors": [ "@mczachurski" ],
  "description": "FluentBahave is a simple ASP.NET Core framework for Gherkin feature files.",
  "title": "FluentBehave",
  "language": "C#",

  "packOptions": {
    "projectUrl": "https://github.com/mczachurski/FluentBehave",
    "licenseUrl": "https://opensource.org/licenses/MIT"
  },

  "dependencies": {
    "NETStandard.Library": "1.6.1",
    "xunit": "2.1.0-*"
  },

  "frameworks": {
    "netstandard1.6": {
      "imports": [
        "dotnet5.6",
        "dnxcore50",
        "portable-net45+win8"
      ]
    }
  },

  "buildOptions": {
    "warningsAsErrors": true
  },

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --configuration %compile:Configuration%"
    ]
  }
}
